    <!-- Morris Chart js -->
    <script src="/admin/plugins/raphael/raphael.min.js"></script>
    <script src="/admin/plugins/morris.js/morris.js"></script>
    <script src="/admin/pages/chart-morris.js"></script>

    <script>
        var $window = $(window);
        var nav = $('.fixed-button');
        $window.scroll(function () {
            if ($window.scrollTop() >= 200) {
                nav.addClass('active');
            }
            else {
                nav.removeClass('active');
            }
        });

        function contain(id, data) {
           for(var i=0;i<data.length;i++){
               if(data[i]._id == id){
                   return true;
               }
           }
           return false;
        }   

        $('#dailytab').click(function(){
            $('#daily').show();
            $('#weekly').hide();
            $('#monthly').hide();
            $('#quarterly').hide();
            $('#yearly').hide();
        })

        $('#weeklytab').click(function(){
            $('#daily').hide();
            $('#weekly').show();
            $('#monthly').hide();
            $('#quarterly').hide();
            $('#yearly').hide();
        })

        $('#monthlytab').click(function(){
            $('#daily').hide();
            $('#weekly').hide();
            $('#monthly').show();
            $('#quarterly').hide();
            $('#yearly').hide();
        })

        $('#quarterlytab').click(function(){
            $('#daily').hide();
            $('#weekly').hide();
            $('#monthly').hide();
            $('#quarterly').show();
            $('#yearly').hide();
        })

        $('#yearlytab').click(function(){
            $('#daily').hide();
            $('#weekly').hide();
            $('#monthly').hide();
            $('#quarterly').hide();
            $('#yearly').show();
        })


        // revenue daily:
        var dataRevenueByDay = <%- JSON.stringify(dataRevenueByDay) %>;
        var fullDataRevenueDay = [];
        dataRevenueByDay.forEach(function (data) {
            fullDataRevenueDay.push({ 'day': data._id, 'totalSold': data.totalSold })
        })
        for (var i = 1; i <= 30; i++) {
            if (!contain(i, dataRevenueByDay)) {
                fullDataRevenueDay.push({ 'day': i, 'totalSold': 0 });
            }
        }
        console.log(fullDataRevenueDay);
        new Morris.Line({
            element: 'line-revenue-by-day',
            data: fullDataRevenueDay,
            xkey: 'day',
            ykeys: ['totalSold'],
            labels: ['Doanh thu'],
            lineColors: ['#2196F3']
        });
        
        


        // revenue weekly:
        var dataRevenueByWeek = <%- JSON.stringify(dataRevenueByWeek) %>;
        var fullDataRevenueWeek = [];
        dataRevenueByWeek.forEach(function (data) {
            fullDataRevenueWeek.push({ 'week': data._id, 'totalSold': data.totalSold })
        })
        for (var i = 1; i <= 4; i++) {
            if (!contain(i, dataRevenueByWeek)) {
              fullDataRevenueWeek.push({ 'week': i, 'totalSold': 0 });
        }
        }
        new Morris.Line({
            element: 'line-revenue-by-week',
            data: fullDataRevenueWeek,
            xkey: 'week',
            ykeys: ['totalSold'],
            labels: ['Doanh thu'],
            lineColors: ['#2196F3']
        });

        // revenue monthly:
        var dataRevenueByMonth = <%- JSON.stringify(dataRevenueByMonth) %>;
        var fullDataRevenueMonth = [];
        dataRevenueByMonth.forEach(function (data) {
            fullDataRevenueMonth.push({ 'month': data._id, 'totalSold': data.totalSold })
        })
        for (var i = 1; i <= 12; i++) {
            if (!contain(i, dataRevenueByMonth)) {
              fullDataRevenueMonth.push({ 'month': i, 'totalSold': 0 });
        }
        }
        new Morris.Line({
            element: 'line-revenue-by-month',
            data: fullDataRevenueMonth,
            xkey: 'month',
            ykeys: ['totalSold'],
            labels: ['Doanh thu'],
            lineColors: ['#2196F3']
        });

        // revenue quarterly:
        var dataRevenueByQuarter = <%- JSON.stringify(dataRevenueByQuarter) %>;
        var fullDataRevenueQuarter = [];
        dataRevenueByQuarter.forEach(function (data) {
            fullDataRevenueQuarter.push({ 'quarter': data._id, 'totalSold': data.totalSold })
        })
        for (var i = 1; i <= 4; i++) {
            if (!contain(i, dataRevenueByQuarter)) {
            fullDataRevenueQuarter.push({ 'quarter': i, 'totalSold': 0 });
        }
        }
        new Morris.Line({
            element: 'line-revenue-by-quarter',
            data: fullDataRevenueQuarter,
            xkey: 'quarter',
            ykeys: ['totalSold'],
            labels: ['Doanh thu'],
            lineColors: ['#2196F3']
        });

        // revenue yearly:
        var dataRevenueByYear = <%- JSON.stringify(dataRevenueByYear) %>;
        var fullDataRevenueYear = [];
        dataRevenueByYear.forEach(function (data) {
            fullDataRevenueYear.push({ 'year': data._id, 'totalSold': data.totalSold })
        })
        var beg = parseInt(dataRevenueByYear[0]._id) -9;
        for (var i = beg; i <= beg + 9; i++) {
            if (!contain(i, dataRevenueByYear)) {
            fullDataRevenueYear.push({ 'year': i, 'totalSold': 0 });
        }
        }
        new Morris.Line({
            element: 'line-revenue-by-year',
            data: fullDataRevenueYear,
            xkey: 'year',
            ykeys: ['totalSold'],
            labels: ['Doanh thu'],
            lineColors: ['#2196F3']
        });

    </script>
