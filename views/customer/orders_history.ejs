<!DOCTYPE html>
<html lang="zxx">

<head>
	<%include layout/head%>

</head>

<body>
	<%include layout/navigation%>

	<!-- banner-2 -->
	<div class="page-head_agile_info_w3l">

	</div>
	<!-- //banner-2 -->
	<!-- page -->
	<div class="services-breadcrumb">
		<div class="agile_inner_breadcrumb">
			<div class="container">
				<ul class="w3_short">
					<li>
						<a href="/">Trang chủ</a>
						<i>|</i>
					</li>
					<li>Tài khoản</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- //page -->
	<!-- account page -->
	<div class="privacy py-sm-5 py-4">
		<div class="container py-xl-4 py-lg-2">
			<!-- tittle heading -->
			<h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
				<span>T</span>ài khoản
			</h3>
			<div class="row">
				<%include layout/account_navside%>
				<div class="right col-lg-9">
					<h4 class="mb-sm-4 mb-3">Lịch sử mua hàng</h4>
					<hr class="m-0">
					<div class="table-responsive orders-list">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">Mã</th>
									<th scope="col">Ngày</th>
									<th scope="col">Trạng thái</th>
									<th scope="col">Tổng thanh toán</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								<%orders.forEach(function(order){%>
								<tr>
									<td class="align-middle">
										<p class="mt-10"><%=order._id%></p>
									</td>
									<td class="align-middle">
										<p class="mt-10"><%=getDateCreated(order.created)%></p>
									</td>
									<td class="align-middle">
										<%if(order.status==0){%>
										<p class="mt-10 order-status-pending">Đang giao</p>
										<%}else if(order.status==1){%>
										<p class="mt-10 order-status-delivered">Đã giao</p>
										<%}else if(order.status==2){%>
										<p class="mt-10 order-status-refund">Đã hoàn trả</p>
										<%}else{%>
										<p class="mt-10 order-status-canceled">Đã hủy</p>
										<%}%>
									</td>
									<td class="align-middle">
										<p class="mt-10 total-price"><%=priceFormat(order.totalPrice)%> VNĐ</p>
									</td>
									<td>
										<a href="/tai-khoan/don-hang/<%=order._id%>" class="btn btn-primary">Xem chi tiết</button>
										</td>
									</tr>
									<%})%>
								</tbody>
							</table>
						</div>
						<%if(pagination.totalItem>0){%>
						<%-include('layout/pagination',{pagination:pagination});%>
						<%}%>
					</div>
				</div>
			</div>
		</div>
		<!-- //account page -->

		<!-- middle section -->
		<div class="join-w3l1 py-sm-5 py-4">
			<div class="container py-xl-4 py-lg-2">
				<div class="row">
					<div class="col-lg-6">
						<div class="join-agile text-left p-4">
							<div class="row">
								<div class="col-sm-7 offer-name">
									<h6>Âm thanh mượt mà, phong phú và to</h6>
									<h4 class="mt-2 mb-3">Tai nghe</h4>
									<p>Giảm giá tới 25% tất cả trong cửa hàng</p>
								</div>
								<div class="col-sm-5 offerimg-w3l">
									<img src="/images/off1.png" alt="" class="img-fluid">
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-6 mt-lg-0 mt-5">
						<div class="join-agile text-left p-4">
							<div class="row ">
								<div class="col-sm-7 offer-name">
									<h6>Điện thoại cỡ trung bình</h6>
									<h4 class="mt-2 mb-3">Smart Phones 5</h4>
									<p>Miễn phí vận chuyển trên $ 100</p>
								</div>
								<div class="col-sm-5 offerimg-w3l">
									<img src="/images/off2.png" alt="" class="img-fluid">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- middle section -->



		<%include layout/footer%>
		<%include layout/account_js%>
	</body>

	</html>